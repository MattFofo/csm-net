@{
    ViewData["Title"] = "Home Page";
}

@model List<Page>

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<div class="text-center">
    <h1 class="display-4">Pages List</h1>

    @if (Model.Count() == 0)
    {
        <h1 class="display-4">Nessuna pagina in memoria</h1>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Actions</th>
                </tr>
                </thead>
                <tbody>
                    @foreach (Page pag in @Model)
                    {
                        <tr>
                            <th scope="row">1</th>
                            <td>@pag.Name</td>
                            <td>
                                <a asp-controller="Page" asp-action="Edit" asp-route-id="@pag.Id">Edit</a>
                                View/Edit/Delete

                            </td>
                        </tr>
                    }
            </tbody>
        </table>

        
    }
    <a href="@Url.Action("Create")">Crea una pagina</a>
</div>
