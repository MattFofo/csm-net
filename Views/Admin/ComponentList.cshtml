@{
    List<string> dirs = ViewData["dirs"] as List<String>;
}

<h1>Lista Componenti Installabili</h1>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Actions</th>
        </tr>
        </thead>
        <tbody>
            @foreach (string item in dirs)
            {
                <tr>
                    <th scope="row">1</th>
                    <td>@item</td>
                    <td>
                        <a asp-controller="Admin" asp-action="InstallComponent" asp-route="@item">Installa</a>
                        <a asp-controller="Admin" asp-action="UninstallComponent" asp-route="@item">Disinstalla</a>

                    </td>
                </tr>
            }
    </tbody>
</table>

